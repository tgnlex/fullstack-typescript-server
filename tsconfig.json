{
	"compilerOptions": {
    "types": ["vitest/globals"]
    "target": "es2022",
		"moduleDetection": "force",
		"module": "preserve",
		"resolveJsonModule": true,
		"allowJs": true,
		"strict": true,
		// "noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"emitDecoratorMetadata": true, 
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true, 
		"experimental decorators": true, 
		lib: ["esnext"],
		"sourcemap": true, 
    "rootDir": "./",
    "path": [
      "?/": ["./tests/*"],
      "@/*": ["./src/app/*"], 
      "_/*": ["./src/frontend/views/*"],
      "__/*": ["./src/frontend/parts/*"],
      "~/*": ["./src/style/"],
      "#/*": ["./static/*"],
      "=/*": ["./src/db/*"],
      "$/*": ["./src/lib/*"],
       "@@/*": ["./src/app/api/*"],
        "!/*": ["./src/interface/*"],
        "%/*": ["./src/app/router/*"]
    ],
	}
}
